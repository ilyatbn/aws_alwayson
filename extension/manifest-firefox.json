{
  "manifest_version": 2,

  "name": "AWS AlwaysON",
  "description": "Stay logged in to AWS console and get STS credentials for CLI access.",
  "version": "1.2.0",
  "browser_action": {
   "default_popup": "menu.html"
  },
  "icons": { 
    "16": "img/icon128.svg",
    "48": "img/icon128.svg",
    "96": "img/icon128.svg"
  },
  "permissions": [
  "storage",
   "alarms",
   "*://*.google.com/*",
   "*://*.aws.amazon.com/*",
   "http://localhost/*"
   ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}